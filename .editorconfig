# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{*.js,*.css,*.html}]
indent_size = 2

[{*.yml,*.yaml}]
indent_size = 2
indent_style = space
